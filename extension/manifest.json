{
  "manifest_version": 3,
  "name": "GTM Skills - AI Sales Prompts",
  "version": "1.0.0",
  "description": "2,500+ AI prompts for B2B sales, right where you work. Get contextual prompts on LinkedIn, Gmail, and CRMs.",
  "author": "Prospeda",
  "homepage_url": "https://gtm-skills.com",

  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://mail.google.com/*",
    "https://gtm-skills.com/*"
  ],

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["dist/content/linkedin.js"],
      "css": ["dist/content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["dist/content/gmail.js"],
      "css": ["dist/content/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    },
    "default_title": "GTM Skills"
  },

  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },

  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["public/icons/*", "sidebar/sidebar.html"],
      "matches": ["https://www.linkedin.com/*", "https://mail.google.com/*"]
    }
  ]
}
