{
  "name": "gtm",
  "version": "1.0.0",
  "description": "Agentic SDR Army. Research, write, call, close - all from OpenClaw.",
  "author": "GTM Skills",
  "homepage": "https://gtm-skills.com/openclaw",
  "repository": "https://github.com/Prospeda/gtm-skills",
  "license": "MIT",
  "commands": {
    "prospect": {
      "description": "Full prospecting flow: enrich → research → draft → ready to send",
      "usage": "gtm prospect [name] at [company]",
      "example": "gtm prospect Sarah Chen at Acme Corp"
    },
    "scout": {
      "description": "Research a company or find prospects",
      "usage": "gtm scout [domain or criteria]",
      "example": "gtm scout acme.com"
    },
    "enrich": {
      "description": "Enrich a contact with full profile",
      "usage": "gtm enrich [email or name]",
      "example": "gtm enrich sarah@acme.com"
    },
    "email": {
      "description": "Draft a cold email",
      "usage": "gtm email [recipient] [--tonality]",
      "example": "gtm email sarah@acme.com --challenger"
    },
    "reply": {
      "description": "Handle an objection or draft a reply",
      "usage": "gtm reply [context]",
      "example": "gtm reply \"we're not interested right now\""
    },
    "linkedin": {
      "description": "Draft a LinkedIn connection request or message",
      "usage": "gtm linkedin [name] [--type]",
      "example": "gtm linkedin Sarah Chen --connection"
    },
    "call": {
      "description": "Generate a cold call script",
      "usage": "gtm call [name]",
      "example": "gtm call Sarah Chen"
    },
    "voicenote": {
      "description": "Generate a voice note script",
      "usage": "gtm voicenote [name]",
      "example": "gtm voicenote Sarah"
    },
    "sequence": {
      "description": "Generate a multi-touch outreach sequence",
      "usage": "gtm sequence [email] [--touches]",
      "example": "gtm sequence sarah@acme.com --touches 5"
    },
    "followup": {
      "description": "Draft a follow-up message",
      "usage": "gtm followup [context]",
      "example": "gtm followup \"sent proposal 3 days ago, no response\""
    },
    "objection": {
      "description": "Get strategic objection handling",
      "usage": "gtm objection [objection]",
      "example": "gtm objection \"we're using a competitor\""
    },
    "discovery": {
      "description": "Generate discovery questions",
      "usage": "gtm discovery [context]",
      "example": "gtm discovery \"VP Sales at Series B SaaS\""
    },
    "prep": {
      "description": "Prepare for a meeting",
      "usage": "gtm prep [company]",
      "example": "gtm prep Acme Corp"
    },
    "battlecard": {
      "description": "Generate competitive battlecard",
      "usage": "gtm battlecard [competitor]",
      "example": "gtm battlecard Outreach"
    },
    "proposal": {
      "description": "Draft a proposal outline",
      "usage": "gtm proposal [company]",
      "example": "gtm proposal Acme Corp"
    },
    "close": {
      "description": "Closing strategies and next steps",
      "usage": "gtm close [deal context]",
      "example": "gtm close \"verbal yes but stalled on contract\""
    }
  },
  "tonalities": [
    { "flag": "--direct", "description": "No fluff, get to the point (default)" },
    { "flag": "--blunt", "description": "Shortest possible, no pleasantries" },
    { "flag": "--challenger", "description": "Push back, teach something new" },
    { "flag": "--exec", "description": "C-suite brevity, business outcomes only" },
    { "flag": "--friendly", "description": "Warm and personable" },
    { "flag": "--hormozi", "description": "Value-stacking, outcome-focused" },
    { "flag": "--voss", "description": "Tactical empathy, labeling, calibrated questions" }
  ],
  "integrations": {
    "enrichment": ["apollo", "clay", "clearbit"],
    "crm": ["hubspot", "salesforce"],
    "email": ["gmail", "outlook"],
    "calendar": ["calendly", "cal.com"]
  },
  "environment": {
    "APOLLO_API_KEY": {
      "description": "Apollo API key for contact enrichment",
      "required": false
    },
    "HUBSPOT_API_KEY": {
      "description": "HubSpot API key for CRM logging",
      "required": false
    },
    "CALENDLY_URL": {
      "description": "Your Calendly booking link",
      "required": false
    }
  }
}
